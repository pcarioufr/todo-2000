{
  "files.defaultLanguage": "markdown",
  "files.associations": {
    "*.md": "markdown"
  },
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "markdownlint.config": {
    "MD013": false,
    "MD033": false,
    "MD041": false
  },
  "editor.wordWrap": "on",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/archive": true,
    "**/*.bak": true
  },
  "files.watcherExclude": {
    "**/archive/**": true,
    "**/*.bak": true
  },
  "cSpell.words": [
    "agentic",
    "todo",
    "todos",
    "roadmap",
    "kanban",
    "standup",
    "retrospective",
    "stakeholder",
    "stakeholders",
    "wireframes",
    "prototyping"
  ]
} 